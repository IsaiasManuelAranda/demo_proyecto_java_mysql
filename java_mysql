    private void jtf_idActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
    }                                      

    private void jb_primeroActionPerformed(java.awt.event.ActionEvent evt) {                                           
        try{
                rs.first();
                this.jtf_id.setText(rs.getString("id_tabla1"));
                this.jtf_nombre.setText(rs.getString("nombre")); 
                this.jtf_ape_pat.setText(rs.getString("ap_paterno"));  
                this.jtf_ape_mat.setText(rs.getString("ap_materno"));
        }catch(Exception err){
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());    
            }
    }                                          

    private void jb_anteriorActionPerformed(java.awt.event.ActionEvent evt) {                                            
        try{
            if(rs.isFirst()==false){ 
                rs.previous();
                this.jtf_id.setText(rs.getString("id_tabla1"));
                this.jtf_nombre.setText(rs.getString("nombre")); 
                this.jtf_ape_pat.setText(rs.getString("ap_paterno"));  
                this.jtf_ape_mat.setText(rs.getString("ap_materno"));
            }
        }catch(Exception err){
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());    
            }
    }                                           

    private void jb_siguienteActionPerformed(java.awt.event.ActionEvent evt) {                                             
        try{
            if(rs.isLast()==false){ 
                rs.next();
                this.jtf_id.setText(rs.getString("id_tabla1"));
                this.jtf_nombre.setText(rs.getString("nombre")); 
                this.jtf_ape_pat.setText(rs.getString("ap_paterno"));  
                this.jtf_ape_mat.setText(rs.getString("ap_materno"));
            }
        }catch(Exception err){
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());    
            }
    }                                            

    private void jb_ultimoActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try{
                rs.last();
                this.jtf_id.setText(rs.getString("id_tabla1"));
                this.jtf_nombre.setText(rs.getString("nombre")); 
                this.jtf_ape_pat.setText(rs.getString("ap_paterno"));  
                this.jtf_ape_mat.setText(rs.getString("ap_materno"));
        }catch(Exception err){
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());    
            }
    }                                         

    private void jb_nuevoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
            String nombre=this.jtf_nombre.getText();
            String ape_pat=this.jtf_ape_pat.getText(); 
            String ape_mat=this.jtf_ape_mat.getText(); 
            st.executeUpdate("Update tabla1 set nombre='"+nombre+"', ape_pat='"+ape_pat+"', ape_mat='"+ape_mat+"';");
        } catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());
    }                                        

    private void jb_guardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        try{
            String nombre=this.jtf_nombre.getText();
            String ape_pat=this.jtf_ape_pat.getText(); 
            String ape_mat=this.jtf_ape_mat.getText(); 
            st.executeUpdate("Insert into tabla1 (nombre,ape_pat,ape_mat)"+" values ('"+ nombre +"','"+ape_pat+"','"+ape_mat+"');");
        } catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());
    }                                        

    }                                          

    private void jb_borrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try{
            String id=this.jtf_id.getText(); 
            st.executeUpdate("delete * tabla1 where id='"+id+"'; ");
        } catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());
    }                                        

    }                                         

    private void jb_seleccionarActionPerformed(java.awt.event.ActionEvent evt) {                                               
        try{
            String nombre=this.jtf_nombre.getText();
            String ape_pat=this.jtf_ape_pat.getText(); 
            String ape_mat=this.jtf_ape_mat.getText(); 
            st.executeUpdate("Select (nombre,ape_pat,ape_mat) from tabla1; ");
        } catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());
    }                                        

    }                                              
    public void Conectar(){
         try{ 
            conexion=DriverManager.getConnection("jdbc:mysql://localhost/prueba1","root","");                     
            st=conexion.createStatement(); 

            rs=st.executeQuery("Select * from tabla1");             

            rs.next(); 

                this.jtf_id.setText(rs.getString("id_tabla1"));                         
                this.jtf_nombre.setText(rs.getString("nombre"));             
                this.jtf_ape_pat.setText(rs.getString("ap_paterno"));
                this.jtf_ape_mat.setText(rs.getString("ap_materno")); 

        }catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        } 

    } 
